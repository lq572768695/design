<div class="modal" id="homepic_add" style="display:block">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close addhomepic_close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title">添加图片</h4>
      </div>
      <div class="modal-body">
        <form role="form" class="form-horizontal"> 
            <div class="form-group">
              <label class="col-sm-2 control-label" for="exampleInputEmail1">名称</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="请输入图片名称" name="imgname">
              </div>
            </div> 
            <div class="form-group">
              <label class="col-sm-2 control-label" for="exampleInputPassword1">描述</label>
              <div class="col-sm-8">
                <input type="textarea" class="form-control" id="exampleInputdis" placeholder="请输入图片描述" name="imgdescribe">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="exampleInputPassword1">文件</label>
              <div class="col-sm-8">
                <input type="file" id="homepic" name="files" value=""   accept="image/*">
              </div>
            </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="image_save">保存</button>
      </div>
    </div>
  </div>
</div>